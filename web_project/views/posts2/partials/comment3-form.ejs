<form action="<%= actionUrl %><%= getPost2QueryString(true) %>" method="post">
  <fieldset <%= !isAuthenticated?'disabled':'' %>>
    <% if(parentComment3){ %>
      <input type="hidden" name="parentComment3" value="<%= parentComment3 %>">
    <% } %>
    <div class="row">
      <div class="col-5">
        <textarea name="text" rows="2" class="form-r <%= (comment3Error._id == comment3._id && comment3Error.parentComment3 == parentComment3 && comment3Error.errors.text)?'is-invalid':'' %>"><%= (comment3Form._id == comment3._id)?comment3Form.form.text:comment3.text %></textarea>
      </div>
      <div class="col-7">
        <% if(comment3._id){ %>
          <button type="submit" class="btnr">수정</button>
        <% } else if(parentComment3) {%>
          <button type="submit" class="btnr">확인</button>
        <% } else { %>
          <button type="submit" class="btnr">확인</button>
        <% } %>
      </div>
    </div>
    <% if(comment3Error._id == comment3._id && comment3Error.parentComment3 == parentComment3 && comment3Error.errors.text){ %>
      <span class="invalid-feedback d-block"><%="내용을 작성해 주세요!"%></span>
    <% } %>
  </fieldset>
</form>
